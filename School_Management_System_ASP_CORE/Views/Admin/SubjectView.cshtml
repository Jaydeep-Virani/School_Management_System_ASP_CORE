@model List<School_Management_System_ASP_CORE.Models.ManageSubjectModel>

@{
    ViewData["Title"] = "Subject Management";
}

<div class="container mx-auto p-4 flex space-x-4">
    <!-- ✅ Add Subject Form -->
    <div class="w-1/2 p-4 bg-white rounded-lg shadow">
        <h2 class="text-xl font-bold mb-4">Add Subject</h2>

        <form asp-action="AddSubject" method="post">
            <div class="mb-4">
                <label for="subject_name" class="block text-sm font-medium text-gray-700">Subject Name</label>
                <input name="subject_name" class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm p-2 focus:ring-blue-500 focus:border-blue-500" required />
            </div>
            <button type="submit" class="px-4 py-2 bg-blue-500 text-white rounded hover:bg-blue-600">Add Subject</button>
        </form>
    </div>

    <!-- ✅ Subject List Table -->
    <div class="w-1/2 p-4 bg-white rounded-lg shadow">
        <h2 class="text-xl font-bold mb-4">Subject List</h2>
        <table class="w-full border">
            <thead>
                <tr class="bg-blue-500 text-white">
                    <th class="p-2 border">ID</th>
                    <th class="p-2 border">Subject Name</th>
                    <th class="p-2 border">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var subject in Model)
                {
                    <tr class="border-t">
                        <td class="p-2 text-center">@subject.subject_id</td>
                        <td class="p-2 text-center">@subject.subject_name</td>
                        <td class="p-2 text-center flex justify-center space-x-4">
                            <a asp-action="Edit_Subject" asp-route-id="@subject.subject_id" class="text-blue-500 hover:text-blue-700">
                                <i class="fas fa-edit"></i>
                            </a>
                            <a asp-action="Delete_Subject" asp-route-id="@subject.subject_id" class="text-red-500 hover:text-red-700">
                                <i class="fas fa-trash-alt"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
