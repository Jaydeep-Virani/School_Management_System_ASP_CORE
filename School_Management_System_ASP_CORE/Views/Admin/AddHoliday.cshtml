@model School_Management_System_ASP_CORE.Models.HolidayModel
@{
    ViewData["Title"] = "Add Holiday";
}

<div class="container mx-auto p-4 bg-white rounded-lg shadow">
    <h2 class="text-2xl font-bold mb-4">Add Holiday</h2>

    <form asp-action="AddHoliday" method="post">
        <div class="mb-4">
            <label class="block text-sm font-medium">Holiday Name</label>
            <input asp-for="Name" class="w-full border p-2 rounded" />
            <span asp-validation-for="Name" class="text-red-500 text-sm"></span>
        </div>

        <div class="mb-4">
            <label class="block text-sm font-medium">Date</label>
            <input asp-for="Date" type="date" class="w-full border p-2 rounded" />
            <span asp-validation-for="Date" class="text-red-500 text-sm"></span>
        </div>

        <button type="submit" class="bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600">Save</button>
    </form>
</div>
