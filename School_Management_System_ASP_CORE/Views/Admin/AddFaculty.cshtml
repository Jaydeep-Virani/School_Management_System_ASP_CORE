@model School_Management_System_ASP_CORE.Models.FacultyModel
@if (TempData["Success"] != null)
{
    <div class="bg-green-200 text-green-800 p-3 mb-4 rounded">
        @TempData["Success"]
    </div>
}
@{
    ViewData["Title"] = "Add Faculty";
}
<form asp-action="AddFaculty" method="post" enctype="multipart/form-data" class="bg-white p-8 shadow-lg rounded-lg">
    <h1 class="text-2xl font-bold text-center mb-6">Add New Faculty</h1>

    <div asp-validation-summary="ModelOnly" class="text-red-500 mb-4"></div>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-3">
        <div>
            <label asp-for="FirstName"></label>
            <input asp-for="FirstName" class="w-full border p-2" />
            <span asp-validation-for="FirstName" class="text-red-500 text-xs"></span>
        </div>
        <div>
            <label asp-for="LastName"></label>
            <input asp-for="LastName" class="w-full border p-2" />
            <span asp-validation-for="LastName" class="text-red-500 text-xs"></span>
        </div>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-3">
        <div>
            <label asp-for="Email"></label>
            <input asp-for="Email" type="email" class="w-full border p-2" />
            <span asp-validation-for="Email" class="text-red-500 text-xs"></span>
        </div>
        <div>
            <label asp-for="PhoneNumber"></label>
            <input asp-for="PhoneNumber" class="w-full border p-2" />
            <span asp-validation-for="PhoneNumber" class="text-red-500 text-xs"></span>
        </div>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-3">
        <div>
            <label asp-for="EmergencyPhoneNumber"></label>
            <input asp-for="EmergencyPhoneNumber" class="w-full border p-2" />
            <span asp-validation-for="EmergencyPhoneNumber" class="text-red-500 text-xs"></span>
        </div>
        <div>
            <label asp-for="DateOfBirth"></label>
            <input asp-for="DateOfBirth" type="date" class="w-full border p-2" />
            <span asp-validation-for="DateOfBirth" class="text-red-500 text-xs"></span>
        </div>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-3">
        <div>
            <label asp-for="Gender"></label>
            <select asp-for="Gender" class="w-full border p-2">
                <option value="">Choose...</option>
                <option>Male</option>
                <option>Female</option>
                <option>Other</option>
            </select>
            <span asp-validation-for="Gender" class="text-red-500 text-xs"></span>
        </div>
        <div>
            <label asp-for="ImageFile">Faculty Image</label>
            <input asp-for="ImageFile" type="file" class="w-full border p-2" />
            <span asp-validation-for="ImageFile" class="text-red-500 text-xs"></span>
        </div>
    </div>

    <div class="mb-4">
        <label asp-for="Address"></label>
        <input asp-for="Address" class="w-full border p-2" />
        <span asp-validation-for="Address" class="text-red-500 text-xs"></span>
    </div>

    <div class="text-left mt-6">
        <button type="submit" class="bg-blue-500 text-white px-6 py-2 rounded hover:bg-blue-600">Add Faculty</button>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
