@model School_Management_System_ASP_CORE.Models.FacultyModel
@{
    ViewData["Title"] = "Add Faculty";
}

<form asp-action="AddFaculty" method="post" enctype="multipart/form-data" class="bg-white p-8 shadow-lg rounded-lg">
    <h1 class="text-2xl font-bold text-center mb-6">Add New Faculty</h1>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-3">
        <div>
            <label asp-for="FirstName" class="block mb-3 text-sm font-medium">First Name</label>
            <input asp-for="FirstName" class="w-full border p-2 focus:outline-sky-600 rounded" />
            <span asp-validation-for="FirstName" class="text-red-500 text-xs"></span>
        </div>
        <div>
            <label asp-for="LastName" class="block mb-3 text-sm font-medium">Last Name</label>
            <input asp-for="LastName" class="w-full border p-2 focus:outline-sky-600 rounded" />
            <span asp-validation-for="LastName" class="text-red-500 text-xs"></span>
        </div>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-3">
        <div>
            <label asp-for="Email" class="block mb-3 text-sm font-medium">Email</label>
            <input asp-for="Email" type="email" class="w-full border p-2 focus:outline-sky-600 rounded" />
            <span asp-validation-for="Email" class="text-red-500 text-xs"></span>
        </div>
        <div>
            <label asp-for="PhoneNumber" class="block mb-3 text-sm font-medium">Phone No.</label>
            <input asp-for="PhoneNumber" type="tel" class="w-full border p-2 focus:outline-sky-600 rounded" />
            <span asp-validation-for="PhoneNumber" class="text-red-500 text-xs"></span>
        </div>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-3">
        <div>
            <label asp-for="EmergencyPhoneNumber" class="block mb-3 text-sm font-medium">Emergency Phone No.</label>
            <input asp-for="EmergencyPhoneNumber" type="tel" class="w-full border p-2 focus:outline-sky-600 rounded" />
            <span asp-validation-for="EmergencyPhoneNumber" class="text-red-500 text-xs"></span>
        </div>
        <div>
            <label asp-for="DateOfBirth" class="block mb-3 text-sm font-medium">Date Of Birth</label>
            <input asp-for="DateOfBirth" type="date" class="w-full border p-2 focus:outline-sky-600 rounded" />
            <span asp-validation-for="DateOfBirth" class="text-red-500 text-xs"></span>
        </div>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-3">
        <div>
            <label asp-for="Address" class="block mb-3 text-sm font-medium">Address</label>
            <textarea asp-for="Address" class="w-full border p-2 focus:outline-sky-600 rounded"></textarea>
            <span asp-validation-for="Address" class="text-red-500 text-xs"></span>
        </div>
        <div>
            <label asp-for="Department" class="block mb-3 text-sm font-medium">Department</label>
            <select asp-for="Department" class="w-full border p-2 focus:outline-sky-600 rounded">
                <option value="">Choose...</option>
                <option value="Computer Science">Computer Science</option>
                <option value="Mathematics">Mathematics</option>
                <option value="Physics">Physics</option>
                <option value="Chemistry">Chemistry</option>
                <option value="English">English</option>
            </select>
            <span asp-validation-for="Department" class="text-red-500 text-xs"></span>
        </div>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-3">
        <div>
            <label asp-for="Gender" class="block mb-3 text-sm font-medium">Gender</label>
            <select asp-for="Gender" class="w-full border p-2 focus:outline-sky-600 rounded">
                <option value="">Choose...</option>
                <option value="Male">Male</option>
                <option value="Female">Female</option>
                <option value="Other">Other</option>
            </select>
            <span asp-validation-for="Gender" class="text-red-500 text-xs"></span>
        </div>
        <div>
            <label asp-for="ImagePath" class="block mb-3 text-sm font-medium">Faculty Image</label>
            <input asp-for="ImagePath" type="file" class="w-full border p-2 focus:outline-sky-600 rounded" />
            <span asp-validation-for="ImagePath" class="text-red-500 text-xs"></span>
        </div>
    </div>

    <div class="text-left mt-6">
        <button type="submit" class="bg-blue-500 text-white px-6 py-2 rounded hover:bg-blue-600">Add Faculty</button>
    </div>
</form>
