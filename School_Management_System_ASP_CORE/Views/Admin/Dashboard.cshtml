@{
    ViewData["Title"] = "Dashboard";
}

@if (TempData["ToastMessage"] != null)
{
    <div id="toast" class="bg-green-200 text-green-800 p-3 mb-1 rounded transition-opacity duration-500 ease-in-out">
        @TempData["ToastMessage"]
    </div>

    <script>
        setTimeout(function () {
            var toast = document.getElementById('toast');
            if (toast) {
                toast.style.opacity = '0';
                setTimeout(() => toast.style.display = 'none', 500); // Fully remove after fade out
            }
        }, 2000);
    </script>
}

<div class="container mx-auto p-6">
    <div class="flex flex-wrap gap-6 justify-start">
        <!-- Students -->
        <div class="w-[300px] h-[150px] bg-white shadow-lg rounded-lg hover:shadow-xl hover:scale-104 transition-shadow">
            <a asp-controller="Student" asp-action="Index" class="block">
                <div class="text-center bg-blue-600 hover:bg-blue-500 rounded-t-lg py-4">
                    <span class="text-xl font-semibold text-white">Students</span>
                </div>
            </a>
            <div class="mt-4 text-center">
                <span class="text-gray-500">Total: 250</span>
            </div>
        </div>

        <!-- Teachers -->
        <div class="w-[300px] h-[150px] bg-white shadow-lg rounded-lg hover:shadow-xl hover:scale-104 transition-shadow">
            <a asp-controller="Teacher" asp-action="Index" class="block">
                <div class="text-center bg-blue-600 hover:bg-blue-500 rounded-t-lg py-4">
                    <span class="text-xl font-semibold text-white">Teachers</span>
                </div>
            </a>
            <div class="mt-4 text-center">
                <span class="text-gray-500">Total: 20</span>
            </div>
        </div>

        <!-- Parents -->
        <div class="w-[300px] h-[150px] bg-white shadow-lg rounded-lg hover:shadow-xl hover:scale-104 transition-shadow">
            <a asp-controller="Parent" asp-action="Index" class="block">
                <div class="text-center bg-blue-600 hover:bg-blue-500 rounded-t-lg py-4">
                    <span class="text-xl font-semibold text-white">Parents</span>
                </div>
            </a>
            <div class="mt-4 text-center">
                <span class="text-gray-500">Total: 250</span>
            </div>
        </div>

        <!-- Class -->
        <div class="w-[300px] h-[150px] bg-white shadow-lg rounded-lg hover:shadow-xl hover:scale-104 transition-shadow">
            <a asp-controller="Class" asp-action="Index" class="block">
                <div class="text-center bg-blue-600 hover:bg-blue-500 rounded-t-lg py-4">
                    <span class="text-xl font-semibold text-white">Class</span>
                </div>
            </a>
            <div class="mt-4 text-center">
                <span class="text-gray-500">Total: 10</span>
            </div>
        </div>

        <!-- Subjects -->
        <div class="w-[300px] h-[150px] bg-white shadow-lg rounded-lg hover:shadow-xl hover:scale-104 transition-shadow">
            <a asp-controller="Subject" asp-action="Index" class="block">
                <div class="text-center bg-blue-600 hover:bg-blue-500 rounded-t-lg py-4">
                    <span class="text-xl font-semibold text-white">Subjects</span>
                </div>
            </a>
            <div class="mt-4 text-center">
                <span class="text-gray-500">Total: 12</span>
            </div>
        </div>
    </div>
</div>
