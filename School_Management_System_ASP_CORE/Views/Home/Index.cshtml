@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css">
</head>
<body>
    <div class="flex h-screen">
        <!-- Left Section -->
        <div class="w-full md:w-1/4 flex flex-col justify-center items-center px-6 md:px-12 lg:px-24">
            <div class="mb-6">
                <img src="/Logo/IMG_1700.PNG" alt="Logo" />
            </div>
            <h2 class="text-2xl font-semibold mb-2">Welcome Back!</h2>
            <p class="text-gray-500 mb-6">Sign in to continue to Edusphere.</p>

            <form asp-controller="Admin" asp-action="Login" method="post" class="w-full max-w-sm">
                <div class="mb-4">
                    <label class="block text-gray-700">Email</label>
                    <input type="email" name="Email" class="w-full px-4 py-2 border rounded focus:outline-sky-600" placeholder="Enter your email" required />
                </div>
                <div class="mb-4">
                    <label class="block text-gray-700">Password</label>
                    <input type="password" name="Password" class="w-full px-4 py-2 border rounded focus:outline-sky-600" placeholder="Enter your password" required />
                </div>
                <button type="submit" class="w-full bg-blue-600 text-white py-2 rounded-lg hover:bg-blue-700 transition">
                    Log In
                </button>
                @if (!ViewData.ModelState.IsValid)
                {
                    <div class="text-red-500 text-sm mb-4">
                        @Html.ValidationSummary(false)
                    </div>
                }
            </form>

            <p class="mt-4 text-gray-500">
                Don’t have an account?
                <a href="/ForgotPassword" class="text-blue-600 hover:underline">Forgot Password?</a>
            </p>
        </div>

        <!-- Right Section - 75% Width with Opacity -->
        <div class="md:w-3/4 relative">
            <div class="absolute inset-0 bg-black opacity-50"></div>
            <div class="w-full h-full bg-cover bg-center" style="background-image: url('/Logo/auth_bg.jpg');"></div>
        </div>
    </div>
</body>
</html>